---
import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

// gera as páginas dinamicamente para cada categoria existente
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  const categories = [
    ...new Set(
      posts
        .map(p => p.data.category)
        .filter(Boolean)
        .map(c => c.trim().toLowerCase().replace(/\s+/g, "-"))
    ),
  ];

  // se não houver categoria, cria apenas "blog"
  if (categories.length === 0) return [{ params: { category: "blog" } }];

  return categories.map(cat => ({ params: { category: cat } }));
}

// capturar categoria e posts filtrados
const { category } = Astro.params;
const posts = await getCollection("blog");
const filtered = posts.filter(
  p =>
    p.data.category &&
    p.data.category.toLowerCase().replace(/\s+/g, "-") === category
);

// textos multilíngues
const labels = {
  en: { title: "Category", none: "No posts in this category." },
  es: { title: "Categoría", none: "No hay publicaciones en esta categoría." },
  pt: { title: "Categoria", none: "Nenhum post nesta categoria." },
};

const lang = "pt";
const L = labels[lang] || labels.en;
const title = `${L.title}: ${category}`;
---

<Base title={title}>
  <section style="padding: 3rem 1rem;">
    <h1 style="text-align:center; font-size:2rem; font-weight:700;">{title}</h1>

    {filtered.length === 0 ? (
      <p style="text-align:center; margin-top:2rem;">{L.none}</p>
    ) : (
      <div
        style="
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
          gap: 2rem;
          margin-top: 2rem;
          max-width: 1100px;
          margin-left: auto;
          margin-right: auto;
        "
      >
        {filtered.map(post => (
          <article style="border-radius: 12px; overflow: hidden; box-shadow: var(--box-shadow); background: white;">
            {post.data.heroImage && (
              <a href={`/${post.slug}/`}>
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  style="width:100%; height:180px; object-fit:cover;"
                />
              </a>
            )}
            <div style="padding:1rem;">
              <h2 style="margin:0;">
                <a
                  href={`/${post.slug}/`}
                  style="color: var(--accent); text-decoration:none; font-weight:600;"
                >
                  {post.data.title}
                </a>
              </h2>
              <p style="color: gray; font-size:0.9rem; margin-top:0.4rem;">
                <FormattedDate date={post.data.pubDate} />
              </p>
            </div>
          </article>
        ))}
      </div>
    )}
  </section>
</Base>
