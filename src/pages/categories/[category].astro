---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION } from "../../consts";

// --- helpers ---
function slugifyCategory(s: string) {
  return (s || "")
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/\s+/g, "-")
    .replace(/[^a-z0-9-]/g, "")
    .replace(/-+/g, "-")
    .replace(/^-|-$/g, "");
}

// ðŸš€ ensure /categories/blog/ always exists + generate all category paths
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  const categories = new Set<string>(["blog"]);
  posts.forEach((p) => {
    const raw = p.data.category;
    const slug = slugifyCategory(raw || "");
    if (slug) categories.add(slug);
  });
  return [...categories].map((category) => ({ params: { category } }));
}

// ðŸ§  Get current category from URL (normalized like above)
const { category } = Astro.params;
const safeCategory = slugifyCategory(category || "blog");

// ðŸ” Load and filter posts
const posts = (await getCollection("blog"))
  .map((p) => {
    const raw = (p.data.category || "Blog")
  .normalize("NFD")
  .replace(/[\u0300-\u036f]/g, "");
    return { ...p, normalizedCat: slugifyCategory(raw) };
  })
  .filter((p) => {
  if (safeCategory === "blog") return true;
  const catSlug = slugifyCategory(p.data.category || "");
  return catSlug === safeCategory;
})
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// ðŸ·ï¸ Category title for header
const categoryTitle =
  posts[0]?.data.category ||
  (category
    ? category
        .replace(/-/g, " ")
        .replace(/\b\w/g, (c) => c.toUpperCase())
    : "Blog");
const pageTitle = `Category: ${categoryTitle}`;
---

<!doctype html>
<html lang="pt">
  <head>
    <BaseHead title={pageTitle} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
        max-width: 90%;
        margin: 0 auto;
        padding: 2rem 0;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h1 style="text-align:center; font-size:2rem; font-weight:700; margin-bottom:2rem;">
          {pageTitle}
        </h1>

        {posts.length > 0 ? (
          <ul>
            {posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage && (
                    <Image width={720} height={360} src={post.data.heroImage} alt="" />
                  )}
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <p style="text-align:center;">No posts found in this category.</p>
        )}
      </section>
    </main>
    <Footer />
  </body>
</html>
